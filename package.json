        "@types/node": "^12.0.0",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "@types/react-redux": "^7.1.9",
        "antd": "^4.4.2",
        "classnames": "^2.2.6",
        "craco-antd": "^1.18.1",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.11",
        "node-sass": "^7.0.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "react-scripts": "3.4.1",
        "redux": "^4.0.5",
